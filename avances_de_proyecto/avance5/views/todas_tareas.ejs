<!DOCTYPE html>

<html lang = "es">

<head>
    
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title><%= titulo %></title>
      <meta name="description" content="Prototipo ">
      <link href = "/css/main.css" rel = "stylesheet">
      <link href = "/css/inputs.css" rel = "stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">


</head>
    
       
   
<body class="row">  
    <div>
        <%- include('includes/navbar.ejs'); %>

    </div>

    <div class="container">
        <div class="row">
            
            <div class="col md-12 sm-12 lg-9">
                
            
                <table class="table table-responsive-md table-striped table-dark">

                      <thead>
                        <tr>
                          <th scope="col" style="width:7%">Id de la tarea</th>
                          <th scope="col" style="width:50%">Nombre</th>
                          <th scope="col" style="width:13%">Fase</th>
                          <th scope="col" style="width:10%">Dificultad</th>
                          <th scope="col" style="width:20%"></th>
                        </tr>
                      </thead>

                      <tbody>
    
                        <% for (let tarea of lista_tareas) { %>
                        
                        <tr>
                               <td scope="row" ><%= tarea.IdTarea %></td>
                               <td scope="row" ><%= tarea.nombre %></td>
                               <td scope="row" ><%= tarea.fase %></td>
                               <td scope="row" ><%= tarea.dificultad %></td>
                               <td scope="row" > <button name="opt"><a href="/tareas/actualizarTarea/<%= tarea.IdTarea %>">Editar tarea </a></button> </td> 

                        </tr>

                        <% } %> 
                        
                      </tbody>

                <div id="graficaTiempo">
                <input type="hidden" id="tiempoEstimadoReal" value="<%= tiempoTareas %>" onafterprint="graficaTiempo()">
                
                <div><h2><%= tiempoTareas[1].TiempoReal%></h2></div>
                
                </div>

                </table>   
            
            
            <button name="opt"><a href="/proyectos/casosdeuso/<%= idProyecto %>"  > Volver al caso de uso </a> </button>
            <button name="opt"><a href="/tareas/nueva/<%= IdCasoDeUso %>/<%= idProyecto %>"> Crear nueva tarea</a></button>

            </div>
        </div>
    </div>

    <canvas id="myChart" width="400" height="400"></canvas>

    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
</body>

<script>
  function graficaTiempo(){
    const valores = document.getElementById('tiempoEstimadoReal').value;
    //El token de protecciÃ³n CSRF
    const csrf = document.getElementById('_csrf').value;

    var data = {TiempoEstimado: valores[0].TiempoEstimado, TiempoReal: valores[0].TiempoReal};
    
    fetch('/grafica', {
      method: 'POST',
      body: JSON.stringify(data),
      headers: {
        'csrf-token': csrf,
        'Content-Type' : 'application/json'
      },
    
    }).then(result => {
      console.log(data);
      return result.json();

    }).then(data => { 
      
      var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

    })
    .catch(err => {
      console.error(err);
    });
  }
</script>


</html>